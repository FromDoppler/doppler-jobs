{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Hangfire": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\DopplerJobs.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Jobs": {
    "SapServiceJob": {
      "IntervalCronExpression": "0 18 * * mon-fri",
      "Identifier": "Doppler_Sap_Job"
    }
  },
  "TimeZoneJobs": "Argentina Standard Time",
  "HttpClient": {
    "Client": {
      "ClientName": "httpClient",
      "Policies": {
        "RetryAttemps": 3
      }
    }
  },
  "DopplerCurrencyServiceSettings": {
    "Url": "https://localhost:5001/Currency/",
    "CurrencyCode": [ "ARS" ]
  },
  "DopplerSapServiceSettings": {
    "Url": "https://localhost:5001/SetCurrencyRate"
  },
  "ConnectionStrings": {
    "DopplerDatabase": "[SECRET_KEY]"
  }
}
